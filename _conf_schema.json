{
  "enable_plugin": {
    "description": "插件总开关",
    "type": "bool",
    "default": true
  },
  "show_debug_info": {
    "description": "显示调试信息",
    "type": "bool",
    "default": false
  },
  "max_cached_nicknames": {
    "description": "每个用户最多缓存的称呼数量",
    "type": "int",
    "default": 5,
    "hint": "设置每个用户可以缓存的称呼数量上限"
  },
  "enable_daily_scan": {
    "description": "启用每日自动扫描群成员",
    "type": "bool",
    "default": true
  },
  "daily_scan_time": {
    "description": "每日扫描时间",
    "type": "string",
    "default": "03:00",
    "hint": "格式为 HH:MM，24小时制"
  },
  "cache_settings": {
    "description": "缓存设置",
    "type": "object",
    "items": {
      "cache_expire_days": {
        "description": "缓存过期天数",
        "type": "int",
        "default": 30,
        "hint": "用户信息缓存的有效期（天）"
      },
      "auto_clean_cache": {
        "description": "自动清理过期缓存",
        "type": "bool",
        "default": true
      }
    }
  },
  "cleanup_on_uninstall": {
    "description": "卸载时清理数据",
    "type": "object",
    "items": {
      "delete_plugin_data": {
        "description": "删除插件数据目录",
        "type": "bool",
        "default": false,
        "obvious_hint": true,
        "hint": "警告：删除后所有缓存的用户信息将丢失"
      },
      "delete_config": {
        "description": "删除配置文件",
        "type": "bool",
        "default": false
      }
    }
  }
}
