{
  "enable_plugin": {
    "description": "插件总开关",
    "type": "bool",
    "default": true,
    "hint": "是否启用插件的所有功能"
  },
  "cache_valid_days": {
    "description": "缓存有效期(天)",
    "type": "int",
    "default": 7,
    "hint": "用户信息缓存的有效天数"
  },
  "enable_daily_scan": {
    "description": "启用每日扫描",
    "type": "bool",
    "default": true,
    "hint": "是否启用每日自动扫描群成员信息"
  },
  "daily_scan_time": {
    "description": "每日扫描时间",
    "type": "string",
    "default": "03:00",
    "hint": "格式: HH:MM，例如 03:00"
  },
  "history_messages_count": {
    "description": "历史消息读取条数",
    "type": "int",
    "default": 100,
    "hint": "智能整理时读取的历史消息数量"
  },
  "max_nicknames": {
    "description": "最大称呼数量",
    "type": "int",
    "default": 5,
    "hint": "每个用户最多缓存的称呼数量"
  },
  "enable_llm_prompt_insert": {
    "description": "启用LLM提示词插入",
    "type": "bool",
    "default": true,
    "hint": "是否在LLM请求时插入用户信息"
  },
  "show_debug_info": {
    "description": "显示调试信息",
    "type": "bool",
    "default": false,
    "hint": "是否显示详细的调试信息"
  },
  "delete_on_uninstall": {
    "description": "卸载时删除数据",
    "type": "bool",
    "default": false,
    "hint": "插件卸载时是否删除所有缓存数据"
  }
}
