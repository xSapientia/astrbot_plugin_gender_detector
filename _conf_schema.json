{
  "enable_plugin": {
    "description": "插件总开关",
    "type": "bool",
    "default": true
  },
  "cache_duration_hours": {
    "description": "缓存有效期（小时）",
    "type": "int",
    "default": 24,
    "hint": "用户信息缓存的有效时间，超过此时间将重新获取"
  },
  "enable_daily_scan": {
    "description": "启用每日扫描",
    "type": "bool",
    "default": true,
    "hint": "是否启用每日自动扫描群成员信息"
  },
  "daily_scan_time": {
    "description": "每日扫描时间",
    "type": "string",
    "default": "03:00",
    "hint": "格式: HH:MM，24小时制"
  },
  "enable_prompt_injection": {
    "description": "启用prompt注入",
    "type": "bool",
    "default": true,
    "hint": "是否在LLM请求时注入用户信息"
  },
  "analyze_history": {
    "description": "分析历史消息",
    "type": "bool",
    "default": true,
    "hint": "扫描时是否分析历史消息以提取用户称呼"
  },
  "history_message_count": {
    "description": "历史消息读取条数",
    "type": "int",
    "default": 100,
    "hint": "分析历史消息时读取的消息数量"
  },
  "max_aliases": {
    "description": "最大称呼数量",
    "type": "int",
    "default": 5,
    "hint": "每个用户最多缓存的称呼数量"
  },
  "show_debug": {
    "description": "显示调试信息",
    "type": "bool",
    "default": false,
    "hint": "是否在日志中显示详细的调试信息"
  },
  "delete_data_on_unload": {
    "description": "卸载时删除数据",
    "type": "bool",
    "default": false,
    "hint": "插件卸载时是否删除所有缓存数据"
  },
  "delete_config_on_unload": {
    "description": "卸载时删除配置",
    "type": "bool",
    "default": false,
    "hint": "插件卸载时是否删除配置文件"
  }
}
