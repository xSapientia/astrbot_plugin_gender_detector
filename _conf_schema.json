{
  "debug": {
    "description": "调试模式",
    "type": "bool",
    "hint": "开启后会在日志中显示详细的调试信息",
    "default": false
  },
  "max_nicknames": {
    "description": "最大缓存称呼数量",
    "type": "int",
    "hint": "每个用户最多缓存的称呼数量",
    "default": 5
  },
  "gender_api_timeout": {
    "description": "API超时时间(秒)",
    "type": "int",
    "hint": "获取用户信息API的超时时间",
    "default": 5
  },
  "cache_expire_days": {
    "description": "缓存过期天数",
    "type": "int",
    "hint": "性别信息缓存的有效期(天)",
    "default": 30
  },
  "enable_nickname_learning": {
    "description": "启用称呼学习",
    "type": "bool",
    "hint": "是否从聊天消息中自动学习用户称呼",
    "default": true
  },
  "enable_smart_user_detection": {
    "description": "启用智能用户识别",
    "type": "bool",
    "hint": "是否智能识别消息中提到但未@的用户",
    "default": true
  },
  "default_nicknames": {
    "description": "默认称呼配置",
    "type": "object",
    "hint": "不同性别的默认称呼设置",
    "items": {
      "male": {
        "description": "男性默认称呼",
        "type": "string",
        "default": "小哥哥"
      },
      "female": {
        "description": "女性默认称呼",
        "type": "string",
        "default": "小姐姐"
      },
      "unknown": {
        "description": "未知性别默认称呼",
        "type": "string",
        "default": "朋友"
      }
    }
  }
}
